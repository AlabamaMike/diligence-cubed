{
  "name": "diligence-cubed",
  "version": "1.0.0",
  "description": "Autonomous due diligence research platform leveraging Claude Agents SDK and MCP servers to perform comprehensive commercial, financial, and technical analysis of target companies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "diligence-cubed": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:agents": "jest tests/agents",
    "test:mcp": "jest tests/mcp",
    "test:orchestration": "jest tests/orchestration",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build:clean && npm run test && npm run lint",
    "prepare": "npm run build",
    "preversion": "npm run lint && npm run test",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "due-diligence",
    "ai-agents",
    "mcp",
    "claude",
    "anthropic",
    "financial-analysis",
    "market-research",
    "competitive-intelligence",
    "investment-analysis",
    "private-equity",
    "venture-capital",
    "m-and-a",
    "business-intelligence",
    "multi-agent-system",
    "autonomous-research",
    "financial-modeling",
    "risk-assessment",
    "company-analysis",
    "typescript",
    "nodejs"
  ],
  "author": "Diligence Cubed Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/diligence-cubed.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/diligence-cubed/issues",
    "email": "support@diligence-cubed.com"
  },
  "homepage": "https://github.com/your-org/diligence-cubed#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.13.0",
    "@types/pg": "^8.15.6",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "redis": "^4.6.12",
    "winston": "^3.18.3",
    "zod": "^3.22.4"
  }
}
